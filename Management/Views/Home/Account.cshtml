@model Management.Models.AccountViewModel

@{
    ViewData["Title"] = "Account";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow">
                <div class="card-header bg-primary text-white">
                    <h3 class="mb-0">Account Details</h3>
                </div>
                <div class="card-body">
                    <dl class="row mb-4">
                        <dt class="col-sm-4">Name</dt>
                        <dd class="col-sm-8">@Model.Name</dd>
                        <dt class="col-sm-4">Email</dt>
                        <dd class="col-sm-8">@Model.Email</dd>
                    </dl>
                    <div class="d-flex justify-content-between">
                        <a asp-action="ResetPassword" class="btn btn-warning btn-lg">
                            <i class="fa fa-key"></i> Reset Password
                        </a>
                        <a asp-action="ResetEmail" class="btn btn-info btn-lg text-white">
                            <i class="fa fa-envelope"></i> Reset Email
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
