@{
    Layout = null;
    ViewData["Title"] = "Start Page";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <title>@ViewData["Title"] - TaskHub</title>
    <meta name="viewport" content="width=device-width, initial-scale=1" />

    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" />

    <!-- Bootstrap Icons -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css" rel="stylesheet" />

    <style>
        body {
            background-color: #f8f9fa;
        }

        a.btn-primary:hover {
            background-color: #004085;
            border-color: #004085;
        }

        a.btn-outline-primary:hover {
            background-color: #cce5ff;
            color: #004085;
        }
    </style>
</head>
<body>
    <div class="container py-5">
        <!-- Header -->
        <header class="d-flex justify-content-between align-items-center mb-5 border-bottom pb-3">
            <h2 class="text-primary fw-bold mb-0">TaskHub</h2>
            <nav>
                <a href="/Identity/Account/Login" class="btn btn-outline-primary me-2">Login</a>
                <a href="/Identity/Account/Register" class="btn btn-primary">Register</a>
            </nav>
        </header>

        <!-- Hero Section -->
        <section class="text-center bg-white rounded-4 p-5 shadow-sm mb-5">
            <h1 class="display-4 fw-bold text-primary mb-3">Welcome to TaskHub</h1>
            <p class="lead text-secondary mb-4">
                Your to-do list, finally under control.
            </p>
            <a href="/Identity/Account/Register" class="btn btn-lg btn-primary px-5 shadow-sm">
                Get Started
            </a>
        </section>

        <!-- Features -->
        <section class="row text-center mb-5">
            <div class="col-md-4 mb-4 mb-md-0">
                <i class="bi bi-check-circle text-success display-4 mb-3"></i>
                <h4 class="fw-semibold mb-2">Smart Task Tracking</h4>
                <p class="text-muted">Track deadlines, statuses, and priorities effortlessly.</p>
            </div>
            <div class="col-md-4 mb-4 mb-md-0">
                <i class="bi bi-calendar-event text-info display-4 mb-3"></i>
                <h4 class="fw-semibold mb-2">Daily & Weekly Views</h4>
                <p class="text-muted">Plan your day or week at a glance with flexible layouts.</p>
            </div>
            <div class="col-md-4">
                <i class="bi bi-people text-warning display-4 mb-3"></i>
                <h4 class="fw-semibold mb-2">Team Collaboration</h4>
                <p class="text-muted">Assign tasks, comment, and work together in real-time.</p>
            </div>
        </section>

        <!-- Quote -->
        <section class="text-center my-5">
            <blockquote class="blockquote fst-italic text-muted fs-5">
                “The key is not to prioritize what's on your schedule, but to schedule your priorities.”
                <footer class="blockquote-footer mt-2">Stephen Covey</footer>
            </blockquote>
        </section>

        <!-- Why choose TaskHub -->
        <section class="bg-white rounded-4 shadow-sm p-4 mb-5">
            <h3 class="text-center mb-4 text-primary fw-bold">Why choose TaskHub?</h3>
            <ul class="list-group list-group-flush fs-5">
                <li class="list-group-item border-0 ps-0"><span class="text-success me-2">✔️</span> Intuitive and clean interface</li>
                <li class="list-group-item border-0 ps-0"><span class="text-success me-2">✔️</span> Stay productive with reminders and notifications</li>
                <li class="list-group-item border-0 ps-0"><span class="text-success me-2">✔️</span> Secure login and user data protection</li>
                <li class="list-group-item border-0 ps-0"><span class="text-success me-2">✔️</span> Access your tasks anywhere, anytime</li>
            </ul>
        </section>

        <!-- Footer -->
        <footer class="text-center text-muted pt-4 border-top">
            <p class="mb-0">&copy; 2025 TaskHub. All rights reserved.</p>
        </footer>
    </div>

    <!-- Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
